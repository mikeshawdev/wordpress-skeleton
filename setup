#!/usr/bin/env bash

vagrant up


composer install

composerPackages=(

)


nodePackages=(
    grunt
    grunt-autoprefixer
    grunt-concurrent
    grunt-contrib-clean
    grunt-contrib-copy
    grunt-contrib-jshint
    grunt-contrib-sass
    grunt-contrib-uglify
    grunt-contrib-watch
    grunt-delete-sync
    grunt-newer
    grunt-notify
    grunt-version-assets
    jit-grunt
    jshint-stylish
    load-grunt-config
    time-grunt
)

for package in "${nodePackages[@]}"
do
    npm install $package --save-dev
done
